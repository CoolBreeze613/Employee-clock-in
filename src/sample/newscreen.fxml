<AnchorPane fx:id="thepane" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Main">
   <children>
      <ImageView fitHeight="450" fitWidth="350" layoutX="0.0" pickOnBounds="false" preserveRatio="false">
         <image>
            <Image url="@../res/bg.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="75.0" layoutY="52.0" pickOnBounds="true" preserveRatio="true" smooth="false">
         <image>
            <Image url="@../res/logo.png" />
         </image>
      </ImageView>
      <PasswordField fx:id="password" alignment="CENTER" layoutX="38.0" layoutY="258.0" prefHeight="44.0" prefWidth="275.0" promptText="Password" style="-fx-border-style: solid; -fx-border-width: 1px; -fx-border-color: #585858; -fx-background-color: 282828; -fx-text-fill: white;" />
      <TextField fx:id="username" alignment="CENTER" layoutX="38.0" layoutY="168.0" prefHeight="38.0" prefWidth="275.0" promptText="Employee Number" style="-fx-border-style: solid; -fx-border-width: 1px; -fx-border-color: #585858; -fx-background-color: 282828; -fx-text-fill: white;" />
      <ImageView layoutX="57.0" layoutY="180.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../res/login.png" />
         </image>
      </ImageView>
      <ImageView layoutX="58.0" layoutY="272.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../res/password.png" />
         </image>
      </ImageView>
      <Label layoutX="212.0" layoutY="302.0" text="Forgotten Password?" textFill="#585858">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <RadioButton fx:id="ptrb" layoutX="75.0" layoutY="319.0" mnemonicParsing="false" text="Project Task" textFill="#8d8d8d">
         <font>
            <Font size="8.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="iarb" layoutX="75.0" layoutY="334.0" mnemonicParsing="false" text="Internal Activity" textFill="#8d8d8d">
         <font>
            <Font size="8.0" />
         </font>
      </RadioButton>
      <Button fx:id="loginbut" layoutX="56.0" layoutY="380.0" mnemonicParsing="false" onAction="#logIn" prefHeight="32.0" prefWidth="240.0" style="-fx-background-color: #9d9d9d;" text="Login" />
      <RadioButton fx:id="ccrb" layoutX="75.0" layoutY="349.0" mnemonicParsing="false" text="Cost Center" textFill="#8d8d8d">
         <font>
            <Font size="8.0" />
         </font>
      </RadioButton>
   </children>
</AnchorPane>
